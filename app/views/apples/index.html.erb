<p id="notice"><%= notice %></p>

<h1>Listing Apples</h1>

<%= form_tag apples_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Names", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Diameter (cm)</th>
      <th>Height (cm)</th>
      <th>Is red</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apples.each do |apple| %>
      <tr>
        <td><%= apple.name %></td>
        <td><%= apple.diameter %></td>
        <td><%= apple.height %></td>
        <td><%= apple.is_red %></td>
        <td><%= link_to 'Show', apple %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_apple_path(apple) %></td>
          <td><%= link_to 'Destroy', apple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Apple', new_apple_path %>
<% end %>
